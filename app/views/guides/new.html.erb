<md-toolbar md-theme="indigo" class="page-header"
  ng-controller="HeaderCtrl as headerCtrl">
  <div class="md-toolbar-tools" layout="horizontal"
    layout-align="space-between">
    <div>Hyper Guides &gt; New Guide</div>

    <md-button ng-click="headerCtrl.openLoginModal()"
      theme="indigo" layout-align="end center"
      aria-label="Open login dialog">Admin Login</md-button>
  </div>
</md-toolbar>

<md-content class="md-padding main-content">
  <form ng-submit="newGuideCtrl.submit()" name="newGuideCtrl.form" novalidate>
    <md-tabs md-theme="indigo" selected="0">
      <md-tab label="Edit">
        <%= render 'form_fields', ctrl: 'newGuideCtrl' %>
      </md-tab>

      <md-tab label="Preview">
        <%= render 'preview', ctrl: 'newGuideCtrl' %>
      </md-tab>
    </md-tabs>

    <md-content class="md-padding">
      <div class="form-actions">
        <md-button type="submit" class="md-raised md-primary"
          md-theme="indigo" ng-disabled="newGuideCtrl.form.$invalid"
          aria-label="Submit">Submit</md-button>
        <md-button type="button" class="md-raised md-warn"
          ng-click="newGuideCtrl.reset()" md-theme="indigo"
          aria-label="Reset">Reset</md-button>
      </div>
    </md-content>
  </form>
</md-content>
